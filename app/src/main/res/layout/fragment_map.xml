<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapFragment">
    <Spinner
        android:id="@+id/dateFilterSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/date_filter_options"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/categoryFilterSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/event_categories"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/dateFilterSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/map_Fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintTop_toBottomOf="@id/categoryFilterSpinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:uiZoomControls="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>